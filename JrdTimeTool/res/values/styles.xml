<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Timer  <item name="android:layout_width">142dip</item> -->
    <style name="button_dark">
        <item name="android:layout_width">240px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="button_light">
        <item name="android:layout_width">240px</item>
        <item name="android:layout_height">67px</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>


    <!-- Alarm -->
    <style name="clock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AlarmClockTheme" parent="android:Theme.Holo.DialogWhenLarge" />

    <style name="SetAlarmTheme" parent="android:Theme.Holo.DialogWhenLarge" />

    <!--
         This theme is similar to the Theme.Dialog.Alert but does not rely on a
         non-public resource.
    -->
    <style name="AlarmAlertTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--
         NOTE: This must be a fullscreen theme, or else the fullscreen alarm will 
         be unable to turn the screen on.
    -->
    <style name="AlarmAlertFullScreenTheme" parent="android:Theme.Holo.Wallpaper.NoTitleBar" />

    <style name="RoundTouchButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="alarm_list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <declare-styleable name="pathbar">
        <attr name="dial" format="reference|color" />
        <attr name="minutehand" format="reference|color" />
        <attr name="real_second" format="reference|color" />
        <attr name="secondhand" format="reference|color" />
        <attr name="minutehandShadow" format="reference|color" />
        <attr name="secondhandShadow" format="reference|color" />
    </declare-styleable>

    <style name="MyNoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!-- add pr447868 xibin start  JrdTimetool与Deskclock功能整合 -->
    <style name="label">
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="big_thin">
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="dialog_button">
        <item name="android:textSize">@dimen/dialog_button_font_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="big_bold">
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:textStyle">bold</item>
        <!-- PR 654553 - Neo Skunkworks - Paul Xu modified - 001 Begin -->
<!--         <item name="android:fontFamily">sans-serif</item> -->
        <item name="android:fontFamily">sans-serif-bold</item>
        <!-- PR 654553 - Neo Skunkworks - Paul Xu modified - 001 End -->
    </style>

    <declare-styleable name="AnalogClock">
        <attr name="jewelRadius" format="dimension" />
        <attr name="jewelOffset" format="dimension" />
        <attr name="jewelColor" format="color" />
    </declare-styleable>
     <declare-styleable name="pickerlable">
        <attr name="lable" format="string" />
    </declare-styleable>
    <!-- add pr447868 xibin end -->
    <!-- PR:491883 add by XIBIN start -->
    <style name="widget_left_top_thin_keyguard">
        <item name="android:textSize">38dip</item>
        <item name="android:textColor">#505050</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="widget_left_next_thin_keyguard">
        <item name="android:textSize">38dip</item>
        <item name="android:textColor">#f0ffff</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="widget_am_pm_keyguard">
        <item name="android:textSize">10dip</item>
        <item name="android:textColor">#f0ffff</item>
    </style>

    <style name="widget_right_part_keyguard">
        <item name="android:textSize">13dip</item>
        <item name="android:textColor">#f0ffff</item>
    </style>
    <!-- PR:491883 add by XIBIN end -->
    <!-- PR 673758 	- Neo Skunkworks - Paul Xu added - 001 Begin -->
    <!-- PR 742824 - Neo Skunkworks- Terry Zhang modified - 001 Begin- -->
    <style name="custom_dialog_theme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- PR 742824 - Neo Skunkworks- Terry Zhang modified - 001 Begin- -->
    <!-- PR 673758 	- Neo Skunkworks - Paul Xu added - 001 End -->

</resources>