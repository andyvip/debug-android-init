<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/topbar" android:background="@drawable/bg_view_topmenubackgroundpic_a" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <Button android:textSize="@dimen/text_size_common" 
            android:textColor="@android:color/white" 
            android:id="@id/btn_back" 
            android:background="@drawable/btn_maininterface_saveandshare_c" 
            android:paddingLeft="7.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_marginLeft="10.0dip" android:text="@string/home" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />
        <Button android:textSize="@dimen/text_size_common" android:textColor="@color/white" 
                android:id="@id/btn_cancel"                android:background="@drawable/btn_square_short" 
                android:gravity="center"                   android:layout_width="wrap_content" 
                android:layout_height="wrap_content"       android:layout_marginRight="10.0dip" 
                android:text="@string/cancel"              android:layout_alignParentLeft="true" 
                android:paddingStart="5dip"
                android:paddingEnd="5dip"
                android:layout_centerVertical="true"
                android:paddingLeft="2.0dip"  android:paddingRight="2.0dip" />
        <TextView android:textSize="20.0dip" android:textStyle="bold" 
            android:textColor="@android:color/white" android:gravity="center" 
            android:id="@id/album_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_album" android:maxEms="6" android:singleLine="true" android:layout_centerInParent="true" />
    </RelativeLayout>
    <FrameLayout android:id="@id/album_content" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_above="@id/album_selector" 
        android:layout_below="@id/topbar" >
         <include layout="@layout/album_grid"/>
         <include layout="@layout/album_list" />
    </FrameLayout>
    
    <FrameLayout android:id="@id/album_selector" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true" 
        >
         <include layout="@layout/album_selector" />
    </FrameLayout>
</RelativeLayout>
